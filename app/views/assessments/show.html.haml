%p#notice= notice
-if !@patient.nil?
  = render('patients/short_info')
  = render 'assign_form'
  = link_to 'Delete assessment', @assessment, :confirm => 'Are you sure?', :method => :delete,:class=> "btn btn-danger"
= render 'form', :form_disabled => true

-if !@patient.nil?
  = link_to 'Edit', edit_patient_assessment_path( @patient,@assessment)
  \|
  = link_to 'Back', patient_path(@patient)
-else
  = link_to 'Back', unassigned_assessments_path