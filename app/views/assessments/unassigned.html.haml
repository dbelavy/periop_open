%h1 Unassigned assessments
=render 'patients/short_info'
%table{:class => "table table-striped table-bordered" }
  %thead
    %tr
      %th Surname
      %th Firstname
      %th Gender
      %th DOB
      %th Date of surgery
      %th Surgeon
      %th Show
      %th Delete
  %tbody
    - @assessments.each do |a|
      %tr
        %td= a.find_answer_by_concept_name 'patient_surname'
        %td= a.find_answer_by_concept_name 'patient_first_name'
        %td= a.find_answer_by_concept_name 'patient_gender'
        %td= a.find_answer_by_concept_name 'patient_dob'
        %td= a.find_answer_by_concept_name 'procedure_date'
        %td= a.find_answer_by_concept_name 'referring_surgeon'
        -if !@patient.nil?
          %td= link_to 'Show', patient_assessment_path(@patient,a),:class=> "btn"
        -else
          %td= link_to 'Show', assessment_path(a),:class=> "btn"
        %td= link_to 'Delete assessment', a, :confirm => 'Are you sure?', :method => :delete,:class=> "btn btn-danger"
%br

= link_to 'Back' ,root_path