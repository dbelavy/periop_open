%h1 Patient Assessments
= render('patients/nav')
- if !@patient.nil?
  =render 'patients/detailed_info'
  - source = unassigned_patient_assessments_url(@patient,format: "json")
- else
  - source = unassigned_assessments_url(format: "json")
%br
%br
%table#assessments{:data => {:source => source}, :class => "table table-striped table-bordered centered" }
  %thead
    %tr
      %th Surname
      %th Firstname
      %th Gender
      %th DOB
      %th Date of assessment
      %th Date of surgery
      %th Surgeon
      %th Anesthetist
      %th
        Questionnaire
        %i.icon-list
      %th
        Assessment
        %i.icon-folder-open
      %th
        Printable
        %i.icon-print
      %th
        Delete
        %i.icon-remove
  %tbody
%br
= render('patients/nav')
