%h2
  = @assessment.form.name

= simple_form_for(@assessment,:url => { :action => "update" }) do |f|
  = f.error_notification
  .form-inputs
  - @questions.each do |q|
    %br
    - if q.input_type=='date'
      -#= f.input :answer ,:as => :date , :start_year => Date.today.year,:end_year => Date.today.year + 10 ,:label => "#{q.display_name}",:input_html => { :name => 'answer' ,:value => @assessment.answer(q)}
    - elsif q.input_type=='select'
      = f.input :answers ,:as => "#{q.input_type}",:collection => q.option_list,:label => "#{q.display_name}",
      :input_html => { :name => "assessment[answer[#{q._id}]]"  ,:value => @assessment.answer(q)}
    - else
      = f.input :answers ,:label => "#{q.display_name}",:input_html => { :name => "assessment[answer[#{q._id}]]" ,:value => @assessment.answer(q)}


  = f.input :status, :collection => Assessment.status_list

  .form-actions
    = f.button :submit
