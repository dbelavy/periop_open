= simple_form_for(@patient) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name, :input_html => { :required => 'required' }
    = f.input :ssn
    = f.input :dob  ,:as => :date, :start_year => Date.today.year - 120,:end_year => Date.today.year - 12, :order => [:day , :month, :year]

  .form-actions
    = f.button :submit
