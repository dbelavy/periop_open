= link_to "Periop", root_path, :class => 'brand'
%ul.nav.pull-right
  - if user_signed_in? && current_user.admin?
    %li
      Loggged in as admin: #{current_user.name}
    %li
      = link_to('Questions managment', questions_path)
    %li
      = link_to('Patients managment', patients_path)
    %li
      = link_to('Doctors management', doctors_path)
  - if user_signed_in?
    %li
      %a{:href => '#'}Loggged in as doctor: #{current_user.name}
    %li
      = link_to('Logout', destroy_user_session_path, :method=>'delete')
  - elsif patient_signed_in?
    %li
      %a{:href => '#'}Loggged in as patient: #{current_patient.name }
    %li
      = link_to('Logout', destroy_patient_session_path, :method=>'delete')
  - else
    %li
      = link_to('Login', new_user_session_path)
    %li
      = link_to('Sign up', new_user_registration_path)
  - if user_signed_in?
    %li
      = link_to('Edit account', edit_user_registration_path)
